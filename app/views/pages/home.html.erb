<h1>FaithBulletin</h1>
<p class="lead">Get organized. Be efficient. Be impactful.</p>

<% @groups.each do |group| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-2">
          <%= image_tag group.profile_pic.url(:thumb) %>
        </div>
        <div class="col-md-6">
          <h2><%= link_to group.title, group_path(group) %></h2>
          <p class="lead"><%= group.tagline %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-4">
          <address>
            <%= group.address %>
          </address>
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-footer">
      <footer>
        
      </footer>
    </div>
  </div>
<% end %>
