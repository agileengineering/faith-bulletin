<h1>My Groups</h1>

<%= link_to new_group_path do %>
    <button class="btn">New Group</button>
<% end %>

<% @groups.each do |group| %>
  <div class="panel panel-default">
    <div class="row panel-body">
      <div class="col-md-4">
        <strong><%= link_to group.title, group_path(group) %></strong><br />
        <%= group.description %>
      </div>
      <% if current_user.is_owner?(group) %>
        <div class="col-md-2">
          <%= link_to 'Edit', edit_group_path(group) %>
        </div>
        <div class="col-md-2">
          <%= link_to 'Manage Members', group_memberships_path(group) %>
        </div>
        <div class="col-md-2">
          <%= link_to 'Manage Categories', group_categories_path(group) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

