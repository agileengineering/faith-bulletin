<%= form_for @group do |f| %>
  <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true %>
  </div>

  <div class="actions">
      <%= f.submit 'Save' %>
  </div>
<% end %>
