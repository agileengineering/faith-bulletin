<%= form_for @group do |f| %>
  <div class="field form-group">
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div>

  <div class="field form-group">
      <%= f.label :description %>
      <%= f.text_area :description, autofocus: true, class: 'form-control' %>
  </div>

  <div class="actions">
      <%= f.submit 'Save', class: 'btn btn-default' %>
  </div>
<% end %>
